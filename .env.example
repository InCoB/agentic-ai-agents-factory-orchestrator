# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Environment Setting
ENVIRONMENT=development  # Options: development, production, testing

# Optional API Keys for Additional Services
NEWS_API_KEY=your_news_api_key_here  # Required for news analysis

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Gradio Interface Configuration
GRADIO_SERVER_NAME=127.0.0.1
GRADIO_SERVER_PORT=7860

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Optional Features
ENABLE_DYNAMIC_WORKFLOW=true  # Enable/disable dynamic workflow generation
CACHE_ENABLED=true  # Enable/disable response caching 